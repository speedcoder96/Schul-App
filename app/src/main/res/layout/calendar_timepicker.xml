<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <EditText
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="00:00"
        android:textSize="60sp"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/hours_increment"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/hours_decrement"
        android:layout_alignEnd="@+id/hours_decrement" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="-"
        android:id="@+id/hours_decrement"
        android:layout_alignBottom="@+id/time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/minutes_increment"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="-"
        android:id="@+id/minutes_decrement"
        android:layout_alignTop="@+id/hours_decrement"
        android:layout_alignLeft="@+id/minutes_increment"
        android:layout_alignStart="@+id/minutes_increment" />


</RelativeLayout>
