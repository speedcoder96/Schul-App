<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="false"
    android:background="@drawable/mm_background">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/mm_schulplaner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_timetable"
        android:background="@drawable/mm_stundenplan"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button_calendar"
        android:background="@drawable/mm_kalendar"
        android:layout_below="@+id/menu_button_timetable"
        android:layout_alignRight="@+id/menu_button_timetable"
        android:layout_alignEnd="@+id/menu_button_timetable"
        android:layout_marginTop="38dp" />
</RelativeLayout>
